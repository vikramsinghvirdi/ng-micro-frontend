{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"ng-host-monorepo": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "",
			"sourceRoot": "src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "ngx-build-plus:browser",
					"options": {
						"outputPath": "dist/ng-host-monorepo",
						"index": "src/index.html",
						"main": "src/main.ts",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "tsconfig.app.json",
						"aot": true,
						"assets": [
							"src/favicon.ico",
							"src/assets"
						],
						"styles": [
							"src/styles.scss",
							"node_modules/@clr/icons/clr-icons.min.css",
							"node_modules/@clr/ui/clr-ui.min.css"
						],
						"scripts": [
							"node_modules/@clr/icons/clr-icons.min.js"
						],
						"extraWebpackConfig": "webpack.config.js",
						"commonChunk": false
					},
					"configurations": {
						"production": {
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.prod.ts"
								}
							],
							"optimization": true,
							"outputHashing": "all",
							"sourceMap": false,
							"extractCss": true,
							"namedChunks": false,
							"extractLicenses": true,
							"vendorChunk": false,
							"buildOptimizer": true,
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "2mb",
									"maximumError": "5mb"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "6kb",
									"maximumError": "10kb"
								}
							],
							"extraWebpackConfig": "webpack.prod.config.js"
						}
					}
				},
				"serve": {
					"builder": "ngx-build-plus:dev-server",
					"options": {
						"browserTarget": "ng-host-monorepo:build",
						"port": 5000,
						"publicHost": "http://localhost:5000",
						"extraWebpackConfig": "webpack.config.js"
					},
					"configurations": {
						"production": {
							"browserTarget": "ng-host-monorepo:build:production",
							"extraWebpackConfig": "webpack.prod.config.js"
						}
					}
				},
				"extract-i18n": {
					"builder": "ngx-build-plus:extract-i18n",
					"options": {
						"browserTarget": "ng-host-monorepo:build",
						"extraWebpackConfig": "webpack.config.js"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "src/test.ts",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "tsconfig.spec.json",
						"karmaConfig": "karma.conf.js",
						"assets": [
							"src/favicon.ico",
							"src/assets"
						],
						"styles": [
							"src/styles.scss"
						],
						"scripts": []
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"tsConfig": [
							"tsconfig.app.json",
							"tsconfig.spec.json",
							"e2e/tsconfig.json"
						],
						"exclude": [
							"**/node_modules/**"
						]
					}
				},
				"e2e": {
					"builder": "@angular-devkit/build-angular:protractor",
					"options": {
						"protractorConfig": "e2e/protractor.conf.js",
						"devServerTarget": "ng-host-monorepo:serve"
					},
					"configurations": {
						"production": {
							"devServerTarget": "ng-host-monorepo:serve:production"
						}
					}
				}
			}
		},
		"mfe01": {
			"projectType": "library",
			"root": "projects/mfe01",
			"sourceRoot": "projects/mfe01/src",
			"prefix": "lib",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"project": "projects/mfe01/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/mfe01/tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "projects/mfe01/tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "production"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "projects/mfe01/src/test.ts",
						"tsConfig": "projects/mfe01/tsconfig.spec.json",
						"karmaConfig": "projects/mfe01/karma.conf.js"
					}
				}
			}
		},
		"mfe02": {
			"projectType": "library",
			"root": "projects/mfe02",
			"sourceRoot": "projects/mfe02/src",
			"prefix": "lib",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"project": "projects/mfe02/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/mfe02/tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "projects/mfe02/tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "production"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "projects/mfe02/src/test.ts",
						"tsConfig": "projects/mfe02/tsconfig.spec.json",
						"karmaConfig": "projects/mfe02/karma.conf.js"
					}
				}
			}
		}
	},
	"defaultProject": "ng-host-monorepo"
}